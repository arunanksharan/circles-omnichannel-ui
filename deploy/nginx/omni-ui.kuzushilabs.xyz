# Omnichannel UI (Next.js)
# ========================
# Reverse proxy to Next.js server running on port 3030
#
# After copying to /etc/nginx/sites-available/, run:
#   sudo ln -s /etc/nginx/sites-available/omni-ui.kuzushilabs.xyz /etc/nginx/sites-enabled/
#   sudo nginx -t
#   sudo systemctl reload nginx
#   sudo certbot --nginx -d omni-ui.kuzushilabs.xyz

upstream omnichannel_ui {
    server 127.0.0.1:3030;
    keepalive 32;
}

server {
    listen 80;
    listen [::]:80;
    server_name omni-ui.kuzushilabs.xyz;

    # Logging
    access_log /var/log/nginx/omni-ui.access.log;
    error_log /var/log/nginx/omni-ui.error.log;

    # Allow file uploads (for any future file ingestion features)
    client_max_body_size 50M;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml image/svg+xml;
    gzip_comp_level 6;

    # Next.js static assets (immutable cache - content-hashed)
    location /_next/static/ {
        proxy_pass http://omnichannel_ui;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Next.js image optimization
    location /_next/image {
        proxy_pass http://omnichannel_ui;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Public static files
    location /static/ {
        proxy_pass http://omnichannel_ui;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        expires 1w;
        add_header Cache-Control "public";
    }

    # Favicon and other root static files
    location ~* ^/(favicon\.ico|robots\.txt|sitemap\.xml)$ {
        proxy_pass http://omnichannel_ui;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        expires 1w;
        add_header Cache-Control "public";
    }

    # All other routes (SSR pages, API routes, etc.)
    location / {
        proxy_pass http://omnichannel_ui;
        proxy_http_version 1.1;

        # WebSocket support (for HMR in dev, React Three Fiber updates)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Timeouts (increased for Three.js heavy pages)
        proxy_read_timeout 120s;
        proxy_send_timeout 120s;

        # Buffer settings for large SSR responses
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;
    }

    # Health check endpoint
    location /api/health {
        proxy_pass http://omnichannel_ui;
        access_log off;
    }
}
